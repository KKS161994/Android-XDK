<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.layer.xdk.ui.message.feedback.LargeFeedbackViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/xdk_ui_margin_x_large">

        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@{viewModel.mMessageModel.getSummary()}"/>

        <com.layer.xdk.ui.message.feedback.FeedbackButton
            android:id="@+id/feedback_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:messageModel="@{viewModel.mMessageModel}"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="@{viewModel.mEditable}"
                app:counterMaxLength="400"
                android:visibility="@{(viewModel.mEditable || viewModel.mMessageModel.getComment() != null) ? View.VISIBLE : View.GONE}">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="@{viewModel.mEditable}"
                    android:gravity="top"
                    android:hint="@{viewModel.mMessageModel.getCommentHint()}"
                    android:inputType="textLongMessage|textMultiLine|textCapSentences"
                    android:maxLength="400"
                    android:minLines="3"
                    android:text="@{viewModel.mComment}"/>

            </android.support.design.widget.TextInputLayout>

        </ScrollView>

        <Button
            android:id="@+id/send"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xdk_ui_margin_small"
            android:text="@string/xdk_ui_feedback_message_send_button"
            android:visibility="@{viewModel.mEditable ? View.VISIBLE : View.GONE}"/>

    </LinearLayout>

</layout>